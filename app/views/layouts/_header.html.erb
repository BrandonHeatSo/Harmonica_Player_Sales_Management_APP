<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Sales Management APP", root_path, id: "logo" %>
    <%= image_tag "music_harmonica.png", class: "header-image" %> <!-- ヘッダー右用の画像 -->
    <%= image_tag "music_harmonica.png", class: "header-image-second" %> <!-- ヘッダー左用の画像 -->
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップへ", root_path %></li>
        <% if user_signed_in? && current_user.admin? %>
          <li><%= link_to "ユーザーの一覧", users_path %></li>
        <% end %>
        <% if user_signed_in? %>
          <li><%= link_to "売上情報の一覧", user_content_sales_path(current_user, Content.first) %></li>
          <li><%= link_to "案件内容の管理", user_contents_path(current_user) %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", user_path(current_user) %></li>
              <li><%= link_to "プロフィールの編集", edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
