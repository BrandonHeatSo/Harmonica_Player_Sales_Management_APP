<% provide(:title, 'Edit Content') %>

<h1>案件内容の編集更新</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @content, url: user_content_path(current_user, @content), local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: @content %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <br>
      <%= f.label :description, class: "label-form" %>
      <%= f.text_area :description, placeholder: "入力は任意です。", rows: 3, class: "form-control" %>
      
      <br>
      <%= f.submit "更新", class: "btn btn-lg btn-primary btn-form" %>
      　<%= link_to "戻る", user_contents_path(current_user), class: "btn btn-lg btn-default" %>
    <% end %>
  </div>
</div>
